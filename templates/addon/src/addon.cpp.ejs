#include <v8.h>
#include <node.h>

using namespace v8;
using namespace node;

<% objects.forEach(function(obj) { %>
#include "<%- obj.name %>.h"
<% }); %>


// Function factory
Handle<Value> CreateFunction(const Arguments& args, std::string name, Handle<Value> (*func)(const Arguments&) ) {
  HandleScope scope;

  Local<FunctionTemplate> tpl = FunctionTemplate::New(func);
  Local<Function> fn = tpl->GetFunction();
  fn->SetName(String::NewSymbol(name));

  return scope.Close(fn);
}

// Object factory
Handle<Value> CreateObject(const Arguments& args) {
  HandleScope scope;

  Local<Object> obj = Object::New();

  return scope.Close(obj);
}

// module.exports = ...
<% objects.forEach(function(obj) { %>
void <%- obj.name%>Init(Handle<Object> exports, Handle<Object> module) {
  exports->Set(String::NewSymbol("<%- obj.name %>"), FunctionTemplate::New(<%- obj.name %>)->GetFunction());
}
<% }); %>


extern "C" {
  static void init(Handle<Object> exports, Handle<Object> module) {
    <% objects.forEach(function(obj) { %>
    <%- obj.name %>::<%- obj.name %>Init(exports, module);
    <% }); %>
  }

  NODE_MODULE(<%- name %>, init);
}

